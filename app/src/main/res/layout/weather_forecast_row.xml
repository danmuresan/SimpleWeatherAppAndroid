<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="2"
    android:columnCount="3">

    <ImageView
        android:id="@+id/weatherForecastRowImageView"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/weatherForecastRowTempTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:textSize="20dp"
        android:padding="5dp"
        android:text="description"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/weatherForecastRowDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:textSize="15dp"
        android:padding="5dp"
        android:text="description"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/weatherForecastRowDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="2"
        android:layout_gravity="right"
        android:textSize="15dp"
        android:padding="5dp"
        android:text="01/01/2017"
        android:layout_margin="5dp"/>

</GridLayout>